{
  "name"           : "dooozestan",
  "version"        : "1.0.0",
  "description"    : "A Tic Tac Toe game for friends to play with each other wherever they are, whatever device they use. Enjoy !",
  "main"           : "index.js",
  "scripts"        : {
    "test"         : "echo \"Error: no test specified\" && exit 1",
    "build-css"    : "node-sass ./scss/application.scss -o ./css && node-sass ./scss/application.scss -wo ./css",
    "build-css-min": "node-sass ./scss/application.scss -o ./css --output-style compressed",
    "build-js"     : "webpack --progress --colors --watch --display-error-details",
    "build-js-min" : "webpack --optimize-minimize --display-error-details",
    "build-dev"    : "npm run build-js | npm run build-css",
    "build"        : "npm install && npm run build-css-min && npm run build-js-min"
  },
  "author"         : "essii-mossii",
  "license"        : "ISC",
  "devDependencies": {
    "backbone"          : "^1.3.3",
    "bootstrap"         : "^3.3.7",
    "bootstrap-sass"    : "^3.3.7",
    "jquery"            : "^3.1.1",
    "node-sass"         : "^3.11.3",
    "raw-loader"        : "^0.5.1",
    "underscore"        : "^1.8.3",
    "webpack"           : "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies"   : {}
}
